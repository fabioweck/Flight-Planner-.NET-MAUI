<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIpractice.Resources.Views.AirportView"
             xmlns:progressBar="clr-namespace:Syncfusion.Maui.ProgressBar;assembly=Syncfusion.Maui.ProgressBar"
             Title="AirportView"
             BackgroundImageSource="rotaer_tab.jpg">




    <VerticalStackLayout Padding="30" Spacing="10">

        <Label  Text="Rotaer - API source: DECEA - Brazil"
                HorizontalOptions="Center"
                FontSize="30"
                FontFamily="Calibri">
            <Label.Shadow>
                    <Shadow Brush="Black"
                    Offset="2,2"
                    Radius="5"
                    Opacity="1"></Shadow>
            </Label.Shadow>
        </Label>
        <Entry x:Name="airportEntry"
                       Placeholder="Type in a location and press ENTER"
                       Completed="airportEntry_Completed"
                       WidthRequest="250"
                       HorizontalOptions="Center"
                       BackgroundColor="#CC000000"
                       HorizontalTextAlignment="Center"/>
    
        <progressBar:SfLinearProgressBar x:Name="ProgressBar"
                                Progress="0" 
                                WidthRequest="750"
                                ProgressFill="Aqua"
                                TrackFill="Black"
                                HorizontalOptions="Center"
                                VerticalOptions="Start"
                                TrackCornerRadius="20"
                                ProgressCornerRadius="20"
                                TrackHeight="3"
                                ProgressHeight="3"
                                IsIndeterminate="False"
                                Margin="10">
            
            <progressBar:SfLinearProgressBar.Shadow>
                <Shadow Brush="aqua"
                Offset="0,0"
                Radius="5"
                Opacity="0.3"></Shadow>
            </progressBar:SfLinearProgressBar.Shadow>
        </progressBar:SfLinearProgressBar>

        <WebView x:Name="rotaer"
                    HeightRequest="520"
             MinimumWidthRequest="1000"
             HorizontalOptions="Center"
             BackgroundColor="Transparent"
                 Opacity="0.5">
            <WebView.Shadow>
                <Shadow Brush="Black"
                        Offset="0,0"
                        Radius="15"
                        Opacity="1">
                </Shadow>
            </WebView.Shadow>
        </WebView>

    </VerticalStackLayout>

</ContentPage>