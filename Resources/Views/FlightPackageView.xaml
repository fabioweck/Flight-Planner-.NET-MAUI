<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIpractice.Resources.Views.FlightPackageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="FlightPackageView">
    <ScrollView>
        <VerticalStackLayout Spacing="30">
            <Label
                HorizontalOptions="Center"
                Text="Flight Package"
                VerticalOptions="Center" />
            <Label x:Name="lblWeather" />
            <Image x:Name="sigwxImage" WidthRequest="800" />
            <Image x:Name="satelliteImage" WidthRequest="800" />
            <Button
                x:Name="btnWeather"
                Clicked="btnWeather_Clicked"
                Text="Read weather test" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>